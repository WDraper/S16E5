create view Current_Project_view as
SELECT 
    project_id,
    project_title,
    type,
    project_active,
    end_date,
    est_person_hours,
    master_project
FROM Project where type = 'Current_Project' ;

create or replace TRIGGER Current_Project_trigger
     INSTEAD OF insert ON Current_Project_view
     FOR EACH ROW
BEGIN
    insert into Project(
        project_id,
        project_title,
        type,
        project_active,
        end_date,
        est_person_hours,
        master_project)
    VALUES ( 
        :NEW.project_id,
        :NEW.project_title,
        'Current_Project',
        :NEW.project_active,
        :NEW.end_date,
        :NEW.est_person_hours,
        :NEW.master_project) ;
END;
/



